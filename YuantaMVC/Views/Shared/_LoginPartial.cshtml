@using Microsoft.AspNetCore.Authorization
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated;
    var username = HttpContextAccessor.HttpContext.User.Identity.Name;
}

<ul class="navbar-nav">
    @if (isAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-dark" id="user-info">Hello @username!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/account/logout">登出</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/account/login">登入</a>
        </li>
    }
</ul>
